{
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "incremental": true,
        "skipLibCheck": true
    }
}
